<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Event App | {{ event.name }}</title>
    <script>
        function toggle_subscription() {
            var button = document.getElementById('toggle_subscription');
            button.disabled = true;
            var xhttp = new XMLHttpRequest();
            xhttp.onreadystatechange = function () {
                if (this.readyState === 4 && this.status === 200) {
                    var response = JSON.parse(this.responseText);
                    if (response['subscribed']) {
                        button.value = "Unsubscribe";
                    } else {
                        button.value = "Subscribe";
                    }
                    button.disabled = false;
                }
            };
            xhttp.open("POST", "{{ url_for('ajax.toggle_event_subscription') }}", true);
            xhttp.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded');
            xhttp.send('token={{ event.url_id }}');
        }
    </script>
</head>
<body>
<h1>{{ event.name }}</h1>
<h2>{{ event.description }}</h2>
{% if not owner %}
    <input type="button" value="{% if subscribed %}Unsubscribe{% else %}Subscribe{% endif %}" id="toggle_subscription"
           onclick="toggle_subscription()">
{% endif %}
</body>
</html>