{% macro wtf_error(field) %}
    {% if field.errors %}
        <ul class="errors">
            {% for error in field.errors %}
                <li>{{ error }}</li>
            {% endfor %}
        </ul>
    {% endif %}
{% endmacro %}

{% macro form_error(field) %}
    {% if field.errors %}
        <div class="error">{{ field.errors[0] }}</div>
    {% endif %}
{% endmacro %}